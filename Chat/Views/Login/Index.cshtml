<h2>Login</h2>

<p>
    @Html.ActionLink("Create New Accouont", "Create")
</p>
<div>
    <h3>
        Login to existing account
    </h3>
    <div>
        @using (Html.BeginForm("EvalLoginRequest", "Login", FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <p>
                @Html.Label("Username") <br>
                @Html.TextBox("requestedUsername")
            </p>
            <p>
                @Html.Label("Password") <br>
                @Html.TextBox("requestedPassword")
            </p>
            <p>
                <input type="submit" value="Login" />
            </p>
            <p>
                @*Is only displayed if an error has been occured.*@
                @Html.ValidationMessage("errorUserNotExist")
            </p>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

